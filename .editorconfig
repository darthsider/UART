# top-most EditorConfig file
root = true

# editorconfig.org

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
tab_width = 4

# Matches multiple files with brace expansion notation
# Set default charset
[*]
charset = utf-8

# 4 space indentation
[*.{v,h,sv,svh}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
